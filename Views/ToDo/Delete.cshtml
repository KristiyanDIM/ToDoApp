@model ToDoApp.Models.ToDoItem

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Изтрий задача</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css">
</head>
<body>
    <div class="container mt-5">
        <h1 class="mb-4">Сигурни ли сте, че искате да изтриета тази задача?</h1>

        <form asp-controller="ToDo" asp-action="DeleteConfirmed" method="post">
            @Html.AntiForgeryToken()
            <input type="hidden" name="id" value="@Model.Id" />
            <p>Заглавие: @Model.Title</p>
            <p>До дата: @Model.DueDate?.ToString("yyyy-MM-dd")</p>
            <button type="submit" class="btn btn-danger">Да, изтрий</button>
            <a href="@Url.Action("Index", "ToDo")" class="btn btn-secondary">Отказ</a>
        </form>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
