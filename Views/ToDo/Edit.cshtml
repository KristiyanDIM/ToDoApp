@model ToDoApp.Models.ToDoItem

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Edit Task</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css">
</head>
<body>
    <div class="container mt-5">
        <h1 class="mb-4">Редактирай</h1>

        <form asp-controller="ToDo" asp-action="Edit" method="post">
            @Html.AntiForgeryToken()
            <input type="hidden" name="id" value="@Model.Id" />

            <div class="mb-3">
                <label for="Title" class="form-label">Заглавие</label>
                <input type="text" class="form-control" id="Title" name="Title" value="@Model.Title" required>
            </div>

            <div class="mb-3">
                <label for="DueDate" class="form-label">До дата</label>
                <input type="date" class="form-control" id="DueDate" name="DueDate" value="@Model.DueDate?.ToString("yyyy-MM-dd")">
            </div>

            <div class="mb-3">
                <label class="form-label">Завършена</label>
                <div>
                    <input type="checkbox" id="IsCompleted" name="IsCompleted" @(Model.IsCompleted ? "checked" : "") />
                </div>
            </div>

            <button type="submit" class="btn btn-primary">Запази промените</button>
            <a href="@Url.Action("Index", "ToDo")" class="btn btn-secondary">Отказ</a>
        </form>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
